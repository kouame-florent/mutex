{
    "settings" : {
        "analysis": {
            "filter": {
                "shingle": {
                    "type": "shingle",
                    "min_shingle_size": 2,
                    "max_shingle_size": 4,
                    "output_unigrams": false,
                    "output_unigrams_if_no_shingles": false
                }
            },
            
            "analyzer": {
                "mutex_shingle": {
                    "tokenizer":  "standard",
                    "filter": ["shingle"]
                }
            }
            
        }
    },
    "mappings": {
        "properties" : {
            "content" : {
                "type" : "text",
                "fields" : {
                    "shingle" : {
                        "analyzer": "mutex_shingle",
                        "type" : "text"
                    }
                }
            }
        }
       
    }
}