{
    "settings" : {
        "analysis": {
            "filter": {
                "shingle": {
                    "type": "shingle",
                    "min_shingle_size": 2,
                    "max_shingle_size": 4,
                    "output_unigrams": false,
                    "output_unigrams_if_no_shingles": false
                },
                "french_elision": {
                    "type": "elision",
                    "articles_case": true,
                    "articles": [
                        "l", "m", "t", "qu", "n", "s",
                        "j", "d", "c", "jusqu", "quoiqu",
                        "lorsqu", "puisqu"
                    ]
                },
                "french_stop": {
                  "type": "stop",
                  "stopwords": "_french_" 
                },
                "english_stop": {
                  "type": "stop",
                  "stopwords": "_english_" 
                }
                
            },
            
            "analyzer": {
                "mutex_shingle": {
                    "tokenizer":  "standard",
                    "filter": ["shingle"]
                },
                "mutex_completion_french": {
                    "tokenizer":  "standard",
                    "filter": [
                      "french_elision",
                      "lowercase",
                      "unique",
                      "french_stop"
                     ]
                },
                "mutex_completion_english": {
                    "tokenizer":  "standard",
                    "filter": [
                      "lowercase",
                      "unique",
                      "english_stop"
                    ]
                }
            }
            
        }
    },
    "mappings": {
        "properties" : {
            "content" : {
                "type" : "text",
                "fields" : {
                    "shingle" : {
                        "analyzer": "mutex_shingle",
                        "type" : "text"
                    }
                }
            }
        }
       
    }
}