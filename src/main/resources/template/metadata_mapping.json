{
    "settings" : {
        "analysis": {
            "analyzer": {
                "trigram": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["shingle"]
                },
                "reverse": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["reverse"]
                }
            }
        }
    },
    "mappings": {
        "dynamic": "strict",
        "properties" : {
            "meta_uuid" : {
                "type" : "keyword"
            },
            "inode_uuid" : {
                "type" : "keyword"
            },
            "file_name" : {
                "type" : "keyword"
            },
            "file_size" : {
                "type" : "long"
            },
            "file_owner" : {
                "type" : "keyword"
            },
            "file_group" : {
                "type" : "keyword"
            },
            "file_tenant" : {
                "type" : "keyword"
            },
            "file_created" : {
                "type" : "date",
                "format" : "date_hour_minute_second"
            },
            "file_mime_type" : {
                "type" : "keyword"
            },
            "permissions" : {
                "type" : "keyword"
            },
            "content" : {
                "type" : "text",
                "fields" : {
                    "trigram": {
                        "type": "text",
                        "analyzer": "trigram"
                      },
                    "reverse": {
                        "type": "text",
                        "analyzer": "reverse"
                    }
                }
            }
        }
        
    }
}

