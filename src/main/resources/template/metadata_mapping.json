{
    "settings" : {
        "analysis": {
            "analyzer": {
                "trigram": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["shingle"]
                },
                "reverse": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["reverse"]
                }
            }
        }
    },
    "mappings": {
        
            "properties" : {
                "meta_uuid" : {
                    "type" : "keyword"
                },
                "inode_uuid" : {
                    "type" : "keyword"
                },
                "file_name" : {
                    "type" : "keyword"
                },
                "file_size" : {
                    "type" : "integer"
                },
                "file_owner" : {
                    "type" : "keyword"
                },
                "file_group" : {
                    "type" : "keyword"
                },
                "file_tenant" : {
                    "type" : "keyword"
                },
                "file_created" : {
                    "type" : "date",
                    "format" : "yyyy-MM-dd"
                },
                "permissions" : {
                    "type" : "keyword"
                },
                "content" : {
                    "type" : "text",
                    "fields" : {
                        "trigram": {
                            "type": "text",
                            "analyzer": "trigram"
                          },
                        "reverse": {
                            "type": "text",
                            "analyzer": "reverse"
                        }
                    }
                }
            }
        
    }
}

